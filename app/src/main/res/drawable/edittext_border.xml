<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    포커스 일때-->
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/weakpurple" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="12dp"
                android:left="8dp"
                android:right="8dp"
                android:top="12dp" />
        </shape>
    </item>

    <!--   포커스 안되었을 때 -->
    <item>
        <shape>
        <stroke
            android:width="1dp"
            android:color="@color/gray" />
        <corners android:radius="8dp" />
        <padding
            android:bottom="12dp"
            android:left="8dp"
            android:right="8dp"
            android:top="12dp" />
        </shape>
    </item>
</selector>